<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.HomePage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="switch" Clicked="clickSwitch"/>
            <Image></Image>
            <StackLayout x:Name="NotConnected" HorizontalOptions="Center" VerticalOptions="Center">
                <Button x:Name="BtnConnexion" Text="Se connecter" Clicked="clickConnexion"/>
                <Button x:Name="BtnEnregistrement" Text="S'enregistrer" Clicked="clickEnregistrement"/>
            </StackLayout>
            <StackLayout x:Name="Connected" HorizontalOptions="Center" VerticalOptions="Center">
                <Button x:Name="BtnCommande" Text="Commander une pizza" Clicked="clickCommande"/>
                <Button x:Name="BtnMap" Text="Les pizzerias près de chez moi" Clicked="clickMap"/>
                <Button x:Name="BtnPanier" Text="Mon Panier" Clicked="clickPanier"/>
                <Button x:Name="BtnAnciennesCommandes" Text="Mes Commandes" Clicked="clickAncienneCommande"/>
                <Button x:Name="BtnCompte" Text="Mon Compte" Clicked="clickCompte"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>