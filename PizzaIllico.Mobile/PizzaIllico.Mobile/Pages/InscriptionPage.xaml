<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaIllico.Mobile.Pages.InscriptionPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="firstname" Placeholder="First Name"/>
            <Entry x:Name="lastname" Placeholder="Lastname"/>
            <Entry x:Name="email" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="phone" Placeholder="Phone number" Keyboard="Telephone"/>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True"/>
            <Button Text="Confirmer Inscription" 
                    Clicked="OnButtonInscriptionClicked"
                    TextColor="White"
                    BackgroundColor="Gray"
                    CornerRadius="10"
                    HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>